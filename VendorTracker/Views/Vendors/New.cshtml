@{
  Layout = "_Layout";
}

<h1>Add a vendor</h1>
<div class="box">
  <form action="/vendor" method="post">
    <label for="vendorName">Vendor's name</label>
    <input id="vendorName" name="vendorName" type="text"><br>
    <label for="description">Description</label>
    <input id="description" name="description" type="text"><br>
    <button type="submit">Add</button>
  </form>

  <p><a href="/vendors">Back to vendor list</a></p>
  <p><a href="/">Back to home page</a></p>
</div>
