@{
  Layout = "_Layout";
}

@using VendorTracker.Models;

<h3>Order List for @Model["vendor"].Name:</h3>

<div class="box">
  @if (Model["order"].Count == 0)
  {
    <p>No orders have been created yet</p>
  }
  else 
  {
    <p>Click an order to see details</p>
  }
  @foreach (Order order in @Model["order"])
  {
    <h3><a href='/vendor/@Model["vendor"].Id/order/@order.Id'>@order.Title</a></h3>
  }

  <p><a href='/vendor/@Model["vendor"].Id/order/new'>Add a new order</a></p>
  <p><a href='/vendor'>Return to vendor list</a></p>
  <p><a href='/'>Return to Main Page</a></p>
</div>