@{
  Layout = "_Layout";
}

@using VendorTracker.Models;

<h1>Vendors</h1>

@if (@Model.Count == 0)
{
  <h3>No vendors have been added yet!</h3>
}
else 
{
  <p>Click on a vendor's name to see more details</p>
} 
<div class="box">
  @foreach (Vendor vendor in Model)
  {
    <h3><a href='/vendor/@vendor.Id'>@vendor.Name</a></h3>
  }
  <a href='/vendor/new'>Add a new vendor</a>
  <p><a href='/'>Back to your home page</a></p>
</div>